page {
  height: 100%;
}
.yys_cates {
  height: 100%;
}
.yys_cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
  color: #666;
}
.yys_cates .cates_container .left_menu {
  flex: 2;
  background-color: #f2f2f2;
}
.yys_cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.yys_cates .cates_container .left_menu .active {
  border-left: 5rpx solid #4d3126;
  color: #4d3126;
  background-color: #ffffff;
  font-weight: 600;
}
.yys_cates .cates_container .right_content {
  flex: 5;
}
.yys_cates .cates_container .right_content .goods_group {
  box-shadow: 5px 5px 5px #fafafa;
}
.yys_cates .cates_container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.yys_cates .cates_container .right_content .goods_group .goods_title .delimiter {
  color: #cccccc;
  padding: 0 10rpx;
}
.yys_cates .cates_container .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.yys_cates .cates_container .right_content .goods_group .goods_list navigator {
  margin: 8px 0;
  width: 33.33%;
  text-align: center;
  font-size: 24rpx;
}
.yys_cates .cates_container .right_content .goods_group .goods_list navigator image {
  width: 50%;
}
