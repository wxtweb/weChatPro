.yys_cart {
  padding-bottom: 94rpx;
}
.address_row {
  color: #4d3126;
}
.address_row .address_btn{
  padding: 20rpx;
}
.address_row .address_btn button{
  width: 60%;
}

.user_wrap{
  display: flex;
  padding: 20rpx;
  border-top: 1px solid #eee;
  border-bottom: 10rpx solid #f5f5f5;
}
.user_wrap .user_info{
  flex: 5;
}
.user_wrap .user_phone{
  flex: 3;
  text-align: right;
  
}

.cart_content{}
.cart_title{
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.cart_main{}
.cart_item{
  display: flex;
}
.cart_item{
  border-bottom: 1px solid #eee;
  padding: 12rpx;
}
.cart_chb_wrap, .cart_img_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_chb_wrap{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap{
  flex: 2;
  
}
.cart_img_wrap image {
  width: 80%;
}
.cart_info_wrap{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_price_wrap{
  display: flex;
  justify-content: space-between;
}
.goods_price{
  color: #b61d22;
}
.goods_num_tool{
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.goods_add, .goods_jis{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #eee;
}
.goods_add{
  flex: 2;
}
.goods_num{
  flex: 2;
}
.goods_jis{
  flex: 2;
}

.footer_tool{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 94rpx;
  background-color: #fff;
  display: flex;
  border-top: 10rpx solid #f5f5f5;
  border-bottom: 10rpx solid #f5f5f5;
  padding-left: 20rpx;
  align-items: center;
}
.all_chk_wrap{
  flex: 3
}
.total_price_wrap{
  flex: 3;
  
}
.total_price{
  flex: 1
}
.price_text{
  flex: 1;
}
.price_type{
  color: #b61d22;
  font-size: 28rpx;
}
.price_num{
  color: #b61d22;
  font-size: 36rpx;
  font-weight: bold;
}
.order_pay_wrap{
  flex: 2;
  width: 100%;
  height: 100%;
  color: #fff;
  background-color: #4d3126;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_empty {
  color: #ccc;
  font-size: 36rpx;
  text-align: center;
  margin-top: 250rpx;
}









