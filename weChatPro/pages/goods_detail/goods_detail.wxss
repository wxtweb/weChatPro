.yys_goodsDetail {
  color: #555;
  padding-bottom: 74rpx;
}
.detail_content {

}
.detail_swiper{}
.detail_swiper swiper{
  height: 60vw;
  text-align: center;
}
.detail_swiper swiper image{
  width: 60%;
}
.goods_price_wrap{
  display: flex;
  padding: 20rpx;
}
.goods_price {
  flex: 6;
}

.goods_price .price_type {
  color: #b61d22;
  font-size: 28rpx;
}
.goods_price .price_new {
  color: #b61d22;
  font-size: 36rpx;
  font-weight: bold;
}
.goods_price .price_activity{
  background-color: #c2a789;
  padding: 5rpx 10rpx;
  margin: 0 24rpx 0 12rpx;
  border-radius: 30rpx;
  color: #fff;
}
.goods_price .price_old {
  color: #999;
  text-decoration: line-through;
}
.goods_share{
 flex: 1;
 display: flex;
 justify-content: flex-end;
 text-align: right;
 color: #999;
 position: relative;
}
.goods_share .share_text{
  margin-left: 6rpx;
}
.goods_share button{
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.goods_name_wrap {
  display: flex;
  padding: 0 20rpx 20rpx 20rpx;
  border-bottom: 20rpx solid #f9f9f9;
}
.goods_name_wrap .goods_name{
  flex: 4;
  padding-right: 20rpx;
  border-right: 1px solid #999;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.goods_name_wrap .goods_collect {
  flex: 1;
  text-align: center;
  color: #999;
}
.goods_info{
  padding: 20rpx;
}
.goods_info .info_title{
  margin: 20rpx 10rpx;
}

.btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 94rpx;
  background-color: #fafafa;
  display: flex;
  padding: 10rpx;
  border-top: 1px solid #ccc;
}
.btm_tool .tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  position: relative;
}
.btm_tool .tool_item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_cart, .btm_tool .btn_buy{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  margin: 0 10rpx;
  color: #fff;
}
.btm_tool .btn_cart{
  background-color: #c2a789;
}
.btm_tool .btn_buy{
  background-color: #4d3126;
}

.actived {
  color: #b61d22;
}
